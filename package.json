{
  "name": "mxs",
  "version": "0.8.2",
  "description": "⚔️ Lightweight functional JavaScript utilities",
  "main": "dist/mxs.js",
  "scripts": {
    "lint": "eslint src/*.ts --max-warnings=0",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write 'src/**/*.{js,ts,tsx}'",
    "build": "webpack --config config/webpack.prod.js",
    "build:dev": "webpack --watch --progress --config config/webpack.dev.js",
    "test": "jest",
    "test:watch": "yarn test --watch --maxWorkers=50%",
    "test:ci": "yarn test --coverage",
    "postpublish": "yarn build",
    "docs:serve": "docsify serve ./docs -P 3000",
    "validate": "yarn lint && yarn test"
  },
  "lint-staged": {
    "src/*.{js,ts,json,js}": [
      "prettier --write ."
    ],
    "src/*.{js,ts}": [
      "eslint --fix",
      "jest --bail --findRelatedTests"
    ]
  },
  "repository": "git@github.com:helderburato/maximus.git",
  "author": "Helder Burato Berto <helder.burato@gmail.com> (https://helderburato.com)",
  "keywords": [
    "maximus",
    "mx",
    "functional",
    "utils",
    "utilities",
    "lightweight",
    "fp"
  ],
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@swc/core": "^1.2.106",
    "@swc/jest": "^0.2.5",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "docsify-cli": "^4.4.2",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.1",
    "faker": "^5.4.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "11.2.6",
    "prettier": "^2.4.1",
    "swc-loader": "^0.1.15",
    "typescript": "^4.4.4",
    "webpack": "^5.61.0",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.7.3"
  },
  "license": "MIT"
}
