{
  "name": "mxs",
  "version": "0.9.0",
  "description": "⚔️ Lightweight functional JavaScript utilities",
  "main": "dist/mxs.js",
  "module": "src/index.js",
  "scripts": {
    "lint": "eslint src --max-warnings=0",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write 'src/**/*.{js,md,json}'",
    "build": "webpack --config config/webpack.prod.js",
    "build:dev": "webpack --watch --progress --config config/webpack.dev.js",
    "test": "jest",
    "test:watch": "yarn test --watch --maxWorkers=50%",
    "test:ci": "yarn test --coverage",
    "postpublish": "yarn build",
    "docs:serve": "docsify serve ./docs -P 3000",
    "generate-fn-md": "jsdoc2md",
    "validate": "yarn lint && yarn test"
  },
  "lint-staged": {
    "src/**/*.{js,json,md}": [
      "prettier --write ."
    ],
    "src/**/*": [
      "yarn lint --fix",
      "yarn test --findRelatedTests --bail"
    ]
  },
  "repository": "git@github.com:helderburato/maximus.git",
  "author": "Helder Burato Berto <helder.burato@gmail.com> (https://helderburato.com)",
  "keywords": [
    "maximus",
    "mx",
    "functional",
    "utils",
    "utilities",
    "lightweight",
    "fp"
  ],
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@swc/core": "^1.2.123",
    "babel-jest": "^27.4.5",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "docsify-cli": "^4.4.2",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "faker": "^5.4.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jsdoc-to-markdown": "^7.1.0",
    "lint-staged": "12.1.4",
    "prettier": "^2.5.1",
    "swc-loader": "^0.1.15",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.7.3"
  },
  "license": "MIT"
}
