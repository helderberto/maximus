{
  "name": "mxs",
  "version": "0.5.0",
  "description": "⚔️ Lightweight functional JavaScript utilities",
  "main": "dist/mxs.js",
  "module": "src/index.js",
  "scripts": {
    "lint": "eslint src --max-warnings=0",
    "format": "prettier --write 'src/**/*.{js,md,json}'",
    "build": "webpack --config config/webpack.prod.js",
    "build:dev": "webpack --watch --progress --config config/webpack.dev.js",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "test:ci": "yarn test --coverage",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable && yarn build",
    "release": "np",
    "docs:serve": "docsify serve ./docs -P 3000",
    "generate-fn-md": "jsdoc2md"
  },
  "lint-staged": {
    "src/**/*": ["yarn format", "yarn lint --fix"]
  },
  "repository": "git@github.com:helderburato/maximus.git",
  "author": "Helder Burato Berto <helder.burato@gmail.com> (https://helderburato.com)",
  "keywords": [
    "maximus",
    "mx",
    "functional",
    "utils",
    "utilities",
    "lightweight",
    "fp"
  ],
  "files": ["dist/", "LICENSE", "README.md"],
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "docsify-cli": "^4.4.2",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "faker": "^5.3.1",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "jsdoc-to-markdown": "^6.0.1",
    "lint-staged": "10.5.4",
    "pinst": "^2.1.4",
    "prettier": "^2.2.1",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0",
    "webpack-merge": "^5.7.3"
  },
  "license": "MIT"
}
